---
import '../styles/globals.css';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
    title: string;
    description?: string;
}

const { title, description = 'Divinex Agency Portfolio showcasing branding, logo, and business card services.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Divinex Agency</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2jrdExoQ0sGUJzUjA/c2Z9W0/p8QzG5z4c2Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <Navbar />
    <slot />
    <Footer />

    {/* Floating "Open for Work" badge */}
    <div id="floating-open-for-work" class="floating-open-for-work">
        <span class="tagline-badge">
            <span class="glowing-dot"></span>
            Open for Work
        </span>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', setupFloatingBadge);
        document.addEventListener('astro:page-load', setupFloatingBadge);

        function setupFloatingBadge() {
            const floatingBadge = document.getElementById('floating-open-for-work');
            const footer = document.querySelector('footer'); // Reference to the footer element
            
            if (!floatingBadge || !footer) {
                console.warn('Floating badge or footer element not found.');
                return;
            }

            // Initial state - visible, but we'll control it based on scroll
            floatingBadge.style.display = 'flex';
            floatingBadge.style.opacity = '1';

            const handleScroll = () => {
                const footerRect = footer.getBoundingClientRect();
                const viewportHeight = window.innerHeight;

                // Hide the badge if the top of the footer is within 100px from the bottom of the viewport
                // or if the footer is substantially visible
                if (footerRect.top < viewportHeight - 100) { // Adjust '100' for how early it should hide
                    floatingBadge.style.opacity = '0';
                    setTimeout(() => {
                        if (parseFloat(floatingBadge.style.opacity) === 0) {
                            floatingBadge.style.display = 'none';
                        }
                    }, 300); // Match CSS transition duration
                } else {
                    // Only show if not overlapping footer
                    floatingBadge.style.display = 'flex';
                    floatingBadge.style.opacity = '1';
                }
            };

            window.removeEventListener('scroll', handleScroll);
            window.addEventListener('scroll', handleScroll);

            handleScroll(); // Initial check on load
        }

        if (document.readyState === 'complete' || document.readyState === 'interactive') {
            setupFloatingBadge();
        }
    </script>
</body>
</html>