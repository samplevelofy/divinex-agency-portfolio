---
// Footer.astro - Final Version
// All styles are in src/styles/globals.css
---

<footer class="footer">
  <button
    id="scroll-to-top-button"
    class="scroll-to-top-button"
    aria-label="Back to top"
  >
    <i class="fa-solid fa-arrow-up"></i>
  </button>

  <div class="container footer-content">
    <div class="footer-logo">
      <i class="fa-solid fa-palette footer-logo-icon"></i>
      <span class="footer-logo-text">Divinex Agency</span>
    </div>

    <div class="footer-social-links">
      <a
        href="https://instagram.com"
        target="_blank"
        rel="noopener noreferrer"
        class="footer-link"
      >
        Instagram
      </a>
      <a
        href="https://behance.net"
        target="_blank"
        rel="noopener noreferrer"
        class="footer-link"
      >
        Behance
      </a>
      <a
        href="https://dribbble.com"
        target="_blank"
        rel="noopener noreferrer"
        class="footer-link"
      >
        Dribbble
      </a>
    </div>

    <div class="footer-copyright">
      &copy; {new Date().getFullYear()} All rights reserved.
    </div>
  </div>
</footer>

<script>
  (function() {
    const initFooter = () => {
      const scrollToTopButton = document.getElementById('scroll-to-top-button');
      if (scrollToTopButton) {
        const scrollToTop = () => {
          window.scrollTo({ top: 0, behavior: 'smooth' });
        };
        // Remove existing listener to prevent duplicates
        scrollToTopButton.removeEventListener('click', scrollToTop);
        // Add new listener
        scrollToTopButton.addEventListener('click', scrollToTop);
      }
    };
    document.addEventListener('astro:page-load', initFooter);
    if (document.readyState === 'complete' || document.readyState === 'interactive') {
        initFooter();
    }
  })();
</script>