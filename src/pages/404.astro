---
// 404.astro - Custom Not Found page
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
    <section class="not-found-section">
        <div class="container not-found-container">
            <h1 class="heading-2 mb-md">404 - Page Not Found</h1>
            <p class="text-xl text-neutral-600 mb-lg">Oops! The page you're looking for doesn't exist.</p>
            <a href="/" class="btn-primary">Go to Homepage</a>
        </div>
    </section>

    <style>
        .not-found-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - var(--spacing-4xl) - var(--spacing-5xl)); /* Adjust for navbar and footer */
            text-align: center;
            padding-block: var(--spacing-5xl);
            background-color: var(--color-background-light);
        }
        .not-found-container {
            max-width: 600px;
            padding: var(--spacing-xl);
            border-radius: var(--spacing-lg);
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            background-color: var(--color-neutral-50);
        }
        .btn-primary {
            background-color: var(--color-brand-primary);
            color: var(--color-text-on-dark);
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }
        .btn-primary:hover {
            background-color: var(--color-coral-600);
        }
    </style>
</Layout>